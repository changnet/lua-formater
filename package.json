{
	"name": "lua-formater",
	"description": "Lua Code formater",
	"version": "1.0.0",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "jest"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"@types/node": "^10.12.21",
		"tslint": "^5.12.1",
		"ts-jest": "^24.2.0",
		"jest": "^24.9.0",
		"@types/jest": "^24.0.23"
	},
	"jest": {
		"moduleFileExtensions": [
			"ts",
			"js",
			"tsx"
		],
		"transform": {
			"\\.(ts)$": "ts-jest"
		},
		"testRegex": "/test/.*\\.(ts|tsx|js)$"
	}
}